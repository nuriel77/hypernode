<config>
    <sections>
        <hypernode translate="label" module="hypernode">
            <label>Hypernode Options</label>
            <tab>general</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <excludes translate="label">
                    <label>Exclude urls</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <exclude>
                            <label>Excluded URLs</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Specify URLs that you don't want cached.<br/>
<br/>
- Enter each pattern on its own line.<br/>
- You can specify <a href="http://www.php.net/manual/en/reference.pcre.pattern.syntax.php">regular expressions</a>.<br/>
- Please do not use ! in patterns.<br/>
- The pattern matches will apply to the complete content of the URL, thus including anything provided after a ?<br/>
- Flush cache to expunge existing cache objects.</br>
<br/>
Example: /(index.php)?/admin/]]></comment>
                        </exclude>
                    </fields>
                </excludes>
                <server_options translate="label">
                    <label>Hypernode server options</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <servers>
                            <label>Hypernode servers</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Specify where hypernode servers can be found.
                            You can specify multiple hypernode servers separating them by comma: 127.0.0.1:80,127.0.0.2:80]]></comment>
                        </servers>
                    </fields>
                </server_options>
            </groups>
        </hypernode>
    </sections>
</config>

